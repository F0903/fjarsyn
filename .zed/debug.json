// Project-local debug tasks
//
// For more documentation on how to configure debug tasks,
// see: https://zed.dev/docs/debugger
[
  {
    "label": "Build & Debug Fjarsyn client",
    "build": {
      "command": "cargo",
      "args": ["build"]
    },
    "program": "$ZED_WORKTREE_ROOT/target/debug/fjarsyn.exe",
    // sourceLanguages is required for CodeLLDB (not GDB) when using Rust
    "sourceLanguages": ["rust"],
    "request": "launch",
    "adapter": "CodeLLDB",
    "terminal": "integrated"
  },
  {
    "label": "Build & Debug Fjarsyn client [RELEASE MODE]",
    "build": {
      "command": "cargo",
      "args": ["build --release"]
    },
    "program": "$ZED_WORKTREE_ROOT/target/release/fjarsyn.exe",
    // sourceLanguages is required for CodeLLDB (not GDB) when using Rust
    "sourceLanguages": ["rust"],
    "request": "launch",
    "adapter": "CodeLLDB",
    "terminal": "integrated"
  },
  {
    "label": "Build & Debug Fjarsyn signal server (bifrost)",
    "build": {
      "command": "cargo",
      "args": ["build -p bifrost"]
    },
    "program": "$ZED_WORKTREE_ROOT/target/debug/bifrost.exe",
    // sourceLanguages is required for CodeLLDB (not GDB) when using Rust
    "sourceLanguages": ["rust"],
    "request": "launch",
    "adapter": "CodeLLDB",
    "terminal": "integrated"
  }
]
